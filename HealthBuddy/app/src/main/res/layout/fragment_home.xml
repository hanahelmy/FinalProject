<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3EA6A6A6"
    android:orientation="vertical"
    tools:context=".fragments.Home">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:backgroundTint="#2CC182"
        android:fontFamily="@font/cardo"
        android:text="hello"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:cornerRadius="50dp"
        app:icon="@drawable/iconrounded"
        app:iconSize="90dp"
        app:iconTintMode="multiply" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#D9D9D9"
            android:fontFamily="@font/cardo"
            android:text="1000/2000cal"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_baseline_local_fire_department_24"
            app:iconSize="35dp"
            app:iconTintMode="multiply"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/water"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D9D9D9"
            android:fontFamily="@font/cardo"
            android:text="4/8c"
            android:textSize="25dp"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:icon="@drawable/water"
            app:iconSize="65dp"
            app:iconTintMode="multiply" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/advice"
            android:layout_width="126dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#5271FE"
            android:fontFamily="@font/cardo"
            android:text="today's health tip"
            android:textSize="10dp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sleep"
            android:layout_width="272dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#869AD3"
            android:fontFamily="@font/cardo"
            android:lineSpacingExtra="10sp"
            android:text="your sleep time after:       6h 30m"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/moreexe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="#0AA6A6A6"
        android:text="see more exercises"
        android:textColor="#726F6F"
        android:textSize="10dp"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_arrow_forward_ios_24"
        app:iconGravity="end"
        app:iconTint="#726F6F" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal" >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lunges"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/lunges"
                android:fontFamily="@font/cardo"
                android:text="lunges"
                android:textSize="30dp"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pushups"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/pushup"
                android:fontFamily="@font/cardo"
                android:text="pushups"
                android:textSize="30dp"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/squats"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/squat"
                android:fontFamily="@font/cardo"
                android:text="squats"
                android:textSize="30dp"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/planks"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/plank"
                android:fontFamily="@font/cardo"
                android:text="planks"
                android:textSize="30dp"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/crunch"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/crunches"
                android:fontFamily="@font/cardo"
                android:text="crunch"
                android:textSize="20dp"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                />

        </LinearLayout>

    </HorizontalScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/morerec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="#0AA6A6A6"
        android:text="see more recipes"
        android:textColor="#726F6F"
        android:textSize="10dp"
        android:textStyle="bold"
        app:icon="@drawable/ic_baseline_arrow_forward_ios_24"
        app:iconGravity="end"
        app:iconTint="#726F6F" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pancake"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/pancake"
                android:fontFamily="@font/cardo"
                android:text="yogurt pancakes"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sandwich"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/eggsan"
                android:fontFamily="@font/cardo"
                android:text="egg sandwich"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chicken"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/chicken"
                android:fontFamily="@font/cardo"
                android:text="chicken with potato widgets"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/smoothie"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/smoothie"
                android:fontFamily="@font/cardo"
                android:text="Mint Protein Green Smoothie"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/salad"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/salad"
                android:fontFamily="@font/cardo"
                android:text="Watermelon and Spinach Salad"
                android:textSize="10dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="multiply"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>